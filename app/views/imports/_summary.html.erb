<div class="import-summary-grid">
  <div class="summary-card">
    <h2><%= t("imports.summary.stories_title") %></h2>
    <p class="summary-value"><%= number_with_delimiter(summary[:stories_count]) %></p>
    <p class="summary-sub"><%= t("imports.summary.labels_count", count: summary[:labels_count]) %></p>
  </div>
  <div class="summary-card">
    <h2><%= t("imports.summary.epics_title") %></h2>
    <p class="summary-value"><%= number_with_delimiter(summary[:epics_count]) %></p>
    <p class="summary-sub">
      <% if summary[:last_imported_at] %>
        <%= t("imports.summary.last_import", datetime: l(summary[:last_imported_at], format: :long)) %>
      <% else %>
        <%= t("imports.summary.not_imported") %>
      <% end %>
    </p>
  </div>
  <div class="summary-card">
    <h2><%= t("imports.summary.file_title") %></h2>
    <% if summary[:file_present] %>
      <p class="summary-value text-sm"><%= t("imports.summary.file_present") %></p>
      <p class="summary-sub"><%= t("imports.summary.file_updated", datetime: l(summary[:file_updated_at], format: :long)) %></p>
    <% else %>
      <p class="summary-value"><%= t("imports.summary.file_missing") %></p>
    <% end %>
  </div>
</div>
